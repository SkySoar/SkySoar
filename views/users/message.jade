doctype html
html
	head
		title= '客人要新留言?'
	body(background="http://i.imgur.com/bChWRNk.jpg",style='background-repeat:no-repeat;background-size:2000px')
		div(style='float:left;margin:10px;')
			a(href='/') 這邊回去唷!!

		div(style='float:right')
			if (username && authenticated)
				spana(style='margin:10px;font-family:"微軟正黑體";font-size:20px;color:#24367D') #{username}
				a(href='/profile', style='margin:10px;font-family:"微軟正黑體";font-size:20px;') 主人~歡迎回來
				a(href='/add_article', style='margin:10px;font-family:"微軟正黑體";font-size:20px;') 新增文章!!
				a(href='/signout', style='margin:10px;font-family:"微軟正黑體";font-size:20px;') 真的要離開嗎!?
			else
				a(href='/signin', style='margin:10px;font-family:"微軟正黑體";font-size:20px;') 登入囉!!
				a(href='/register', style='margin:10px;font-family:"微軟正黑體";font-size:20px;') 新的客人嗎?這邊註冊喔
	
	div(style='padding:50px;')
		h1(style='font-family:"微軟正黑體";color:#00FFFF;font-size:20px;')= '留言:'

	for article in blogs
		div
			div(style='float:left;margin-top:10px;font-family:"微軟正黑體";color:#00FFFF;font-size:20px;')= article.Username
			div(style='float:right;margin-top:10px;font-family:"微軟正黑體";color:#00FFFF;font-size:20px;')= article.CreateDate
			br
			div(style='clear:both;font-family:"微軟正黑體";color:#00FFFF;font-size:20px;')= article.Article
			hr(style='margin-top:30px;')
			br
			br

	div(style='width:40%;margin-left:30%; ')
		for comment in comments
			div(style='right:42%; margin-top:20px;')
				div(style='float:left;margin-top:10px;')= comment.Visitor
				div(style='float:right;margin-top:10px;')= comment.CreateDate
				br
				div(style='clear:both')= comment.Comment
				hr(style='margin-top:30px;')
				br
				br
			
	div(style='margin-left:30%;')
		form(name="comment", action="/apis/comment/" + messageID, method="post")
			h1(style='font-family:"微軟正黑體";color:#00FFFF;font-size:20px;') 新留言
			div
				p
					span(style='font-family:"微軟正黑體";color:#00FFFF;font-size:20px;') 主人的名字~: 
					input(type="text", name="Visitor")
				p
					textarea(cols="50", rows="10", style='resize : none;', name="Comment")
				div
					span(style='padding-right:377px')
					input(type="submit", name="submit", value="留言~")
					hr(style='width:50%;margin-top:30px;margin-left:0%;')
					br
					br


					


